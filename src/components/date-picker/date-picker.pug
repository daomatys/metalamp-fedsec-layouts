include /components/button/__mean-oval/button__mean-oval.pug

mixin datePicker( id )
  .date-picker__element
  .date-picker__buttons
    .date-picker__buttons_clear
      +meanOvalButtons({
        groupname: `${id}-clear`,
        buttons: [{ type: "text", text: "очистить" }]
      })
    .date-picker__buttons_submit
      +meanOvalButtons({
        groupname: `${id}-submit`,
        buttons: [{ type: "text", text: "применить" }]
      })
