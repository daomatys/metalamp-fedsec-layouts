include /components/input/input.pug
include /components/button/__mean-oval/button__mean-oval.pug

mixin cardFindRoom()
  .find-room.card-style_default
    .find-room__container_title
      span.custom-font-style_h1 Найдём номера под ваши пожелания

    .find-room__container_date-pickers
      .find-room__date-pickers-row.twins-grid-line
        +input({
          id: "find-room__date-picker_arrival",
          type: "date-picker",
          title: "прибытие",
          hierarchy: "master",
          widthbypercent: 47,
        })
        +input({
          id: "find-room__date-picker_departure",
          type: "date-picker",
          title: "выезд",
          hierarchy: "slave",
          widthbypercent: 47,
          dates: "2019-08-19, 2019-08-23"
        })

    .find-room__container_guests-dropdown
      +input({
        type: "dropdown",
        id: "find-room__guests",
        title: "гости",
        placeholder: "Сколько гостей",
        dropdown: {
          options: [
              { name: "взрослые", count: 0 },
              { name: "дети",     count: 0 },
              { name: "младенцы", count: 0 }
          ]
        }
      })

    .find-room__container_submit-button.card-footer
      +meanOvalButtons({
        groupname: "find-room__submit-button",
        buttons: [
          {
            type: "contained",
            text: "подобрать номер",
            iconname: "arrow_forward",
            widthbypercent: 100
          }
        ]
      })
