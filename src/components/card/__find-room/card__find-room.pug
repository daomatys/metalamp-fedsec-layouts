include ../../input/input.pug
include ../../button/__mean-oval/button__mean-oval.pug

mixin cardFindRoom()
  .find-room.card-style_default
    span.find-room__title.font-size_h1 Найдём номера под ваши пожелания
    .find-room__dropdowns_date-picker.twinline-gap_longest
      +inputs([
        {
          id: "find-room__date-picker_01",
          title: "прибытие",
          placeholder: "ДД.ММ.ГГГГ",
          widthbypercent: 50,
          dropdown: {
            options: [
              ""
            ]
          }
        },
        {
          id: "find-room__date-picker_02",
          title: "выезд",
          placeholder: "ДД.ММ.ГГГГ",
          widthbypercent: 50,
          dropdown: {
            options: [
              ""
            ]
          }
        }
      ])
    .find-room__dropdowns_guests
      +inputs([
        {
          id: "find-room__guests",
          title: "dropdown",
          placeholder: "Сколько гостей",
          dropdown: {
            options: [
              "взрослые",
              "дети",
              "младенцы"
            ]
          }
        }
      ])
    .find-room__button_submit
      +meanOvalButtons({
        groupname: "find-room__submit-button",
        buttons: [
          {
            type: "contained",
            text: "подобрать номер",
            iconname: "arrow_forward",
            widthbypercent: 100
          }
        ]
      })
