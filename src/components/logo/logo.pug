mixin logotype( type )
  case type 
    when 'monochrome'
      form.logotype.logotype_monochrome( action="index.html" )
        input.logotype__button( type="submit" )
        img.logotype__image( src=require("../assets/images/vector/logo-monochrome-s48.svg") )
    when 'colorful'
      form.logotype.logotype_colorful( action="" )
        input.logotype__button( type="submit" )
        img.logotype__image( src=require("../assets/images/vector/logo-colorful-s40.svg") )
        img.logotype__image( src=require("../assets/images/vector/logo-text-part.svg") )
        