include dropdown/dropdown.pug
include ../title-bar/title-bar.pug
include ../material-icon-cell/material-icon-cell.pug

mixin inputs( items=[] )
  each item in items
    - const keyDropdownClasses = item.dropdown ? 'dropdown-marker dropdown-is-closed' : ''
    - const keyReadOnly = item.dropdown ? true : false
    - const widthByPercent = item.widthbypercent ? item.widthbypercent : '100'
    - const widthClass = `elem__width_${widthByPercent}`

    .input( class=widthClass )
      if item.title
        .input__text-bar
          +titleBar( item.title, item.state )
      .input__data-bar
        input.input__frame.elem__border( class=keyDropdownClasses readonly=keyReadOnly type=item.type placeholder=item.placeholder )
        if item.dropdown
          .input-icons.icon-style_dropdown
            +materialIcon('expand_more')
          +dropdown( item.dropdown )
        if item.subscription
          .input-icons.icon-style_subscription.gradient-fill 
            +materialIcon('arrow_forward')
