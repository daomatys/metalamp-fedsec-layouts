include /components/logo/logo.pug
include /components/input/input.pug
include /components/title-bar/title-bar.pug
include /components/navigation-bar/navigation-bar.pug

- 
  const navBarUnits = [
    {
      vertical: true,
      title: "навигация",
      links: [
        { name: "О нас" },
        { name: "Новости" },
        { name: "Служба поддержки" },
        { name: "Услуги" }
      ]
    },
    {
      vertical: true,
      title: "О нас",
      links: [
        { name: "О сервисе" },
        { name: "Наша команда" },
        { name: "Вакансии" },
        { name: "Инвесторы" }
      ]
    },
    {
      vertical: true,
      title: "Служба поддержки",
      links: [
        { name: "Соглашения" },
        { name: "Сообщества" },
        { name: "Связь с нами" }
      ]
    }
  ]

mixin footer( item )
  case item.type
    when 'default'
      .footer_default.footer
        .footer__default-sections_upper.fullscreen-bottom-border
          .footer__content
            .footer__content_shell
              .footer__logotype
                +logo({ type: "colorful" })
              .footer__awards-text
                span.custom-font-style_body Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
            each unit in navBarUnits
              .footer__content_core
                +navigationBar( unit )
            .footer__content_shell
              +titleBar("подписка")
              span.custom-font-style_body Получайте специальные предложения и новости сервиса
              +input({
                placeholder: "Email",
                type: "subscription",
                widthbypercent: 81,
              })
        .footer__default-sections_lower
          .footer__content
            .footer__content_copyright
              span.footer__remark.custom-font-style_body Copyright © 2018 Toxin отель. Все права защищены.
            .footer__content_icons
    when 'mobile'
      .footer_mobile.footer
        +logo({ type: "colorful" })
        span.footer__remark.custom-font-style_body Copyright © 2018 Toxin отель. Все права защищены.
        .footer__content_icons
          a(href="/address/change-me" target="_blank" rel="noopener noreferrer")
            i.fa.fa-twitter( aria-hidden="true" )
          a(href="/address/change-me" target="_blank" rel="noopener noreferrer")
            i.fa.fa-facebook-square( aria-hidden="true" )
          a(href="/address/change-me" target="_blank" rel="noopener noreferrer")
            i.fa.fa-instagram( aria-hidden="true" )
