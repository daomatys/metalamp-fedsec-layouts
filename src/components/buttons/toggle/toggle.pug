mixin toggleButtons( items=[] )
  each item in items
    - const iconAdditionalClass = item.pressed ? 'gradient-fill' : ''
    - const buttonPressedClass = item.pressed ? 'toggle-button__elem_pressed' : ''

    .toggle-button 
      .toggle-button__elem( class=buttonPressedClass )
        span.dot( class=iconAdditionalClass )
      .toggle-button__label
        label #{item.label}
