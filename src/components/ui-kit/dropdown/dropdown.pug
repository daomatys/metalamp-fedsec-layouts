mixin dropdownItems( items=[] )
  each item in items
    .input
      .input__textbar
        p.input__textbar_title #{item.title}
        if item.state 
          p.input__textbar_state #{item.state}
      select.input__frame(class=`form-element-width_${item.width ? item.width : 100}`)
        option( selected hidden ) #{item.placeholder}