extends /pages/ui-kit/ui-kit.pug


block head 
  title UI KIT / Cards


block append body
  body.ui-kit__body.bg-color_whisper


block main
  include /components/card/__registration/card__registration.pug
  include /components/card/__find-room/card__find-room.pug
  include /components/card/__login/card__login.pug
  include /components/card/__room-booking/card__room-booking.pug
  include /components/card/__room-sample/card__room-sample.pug
  include /components/card/__date-picker/card__date-picker.pug

  .headers-n-footers__wrap
    .headers-n-footers__column
      +cardFindRoom()
      +cardRegistration()
    .headers-n-footers__column
      +cardRoomBooking()
      +cardLogin()
    .headers-n-footers__column
      +cardDatePicker({
        id: "uik-cards__date-picker",
        dates: "2019-08-19, 2019-08-23"
      })
      include ./ui-kit__cards-samples
      each sample in samples
        +cardRoomSample( sample )
