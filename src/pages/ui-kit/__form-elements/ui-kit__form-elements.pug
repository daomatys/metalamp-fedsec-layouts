include /components/logo/logo.pug
include /components/input/input.pug
include /components/title-bar/title-bar.pug
include /components/pagination/pagination.pug
include /components/bullet-list/bullet-list.pug
include /components/comment-bar/comment-bar.pug
include /components/range-slider/range-slider.pug
include /components/checkbox-list/checkbox-list.pug
include /components/advantage-bar/advantage-bar.pug

include /components/button/__like/button__like.pug
include /components/button/__radio/button__radio.pug
include /components/button/__toggle/button__toggle.pug
include /components/button/__checkbox/button__checkbox.pug
include /components/button/__star-rate/button__star-rate.pug
