include ../components/ui-kit/header/header.pug
include ../components/ui-kit/input/input.pug
include ../components/ui-kit/dropdown/dropdown.pug
include ../components/ui-kit/advantage-bar/advantage-bar.pug

head
  block scripts
    script(src='../src/components/ui-kit/dropdown/dropdown.js')   

block content
  body.ui-kit__body
    +header()
    main.ui-kit__main
      .indention_wrap.form-elements-wrap_top
        .indention_single
          +inputs([
            {
              title: "text field",
              state: "default",
              type: "email",
              placeholder: "Email",
              widthkey: 100
            },
            {
              title: "text field",
              state: "hover / focus",
              placeholder: "This is pretty awesome",
              widthkey: 100
            },
            {
              title: "dropdown",
              placeholder: "Сколько гостей",
              widthkey: 100,
              dropdown: {
                options: [
                  "взрослые",
                  "дети",
                  "младенцы"
                ]
              }
            },
            {
              title: "masked text field",
              placeholder: "ДД.ММ.ГГГГ",
              widthkey: 100
            }
          ])
        .indention_double.pseudo-twins-line
          +inputs([
            {
              title: "date dropdown",
              placeholder: "ДД.ММ.ГГГГ",
              widthkey: 50,
              dropdown: {
                options: [
                  ""
                ]
              }
            },
            {
              title: "date dropdown",
              placeholder: "19.08.2019",
              widthkey: 50,
              dropdown: {
                options: [
                  ""
                ]
              }
            }
          ])
        .indention_double
          +inputs([
            {
              title: "filter date dropdown",
              placeholder: "19 авг - 23 авг",
              widthkey: 75,
              dropdown: {
                options: [
                  ""
                ]
              }
            }
          ])
        .indention_double
      .indention_wrap.form-elements-wrap_middle
        .indention_single
          +inputs([
            {
              title: "dropdown",
              state: "default",
              placeholder: "2 спальни, 2 кровати...",
              widthkey: 75,
              dropdown: {
                options: [
                  ""
                ]
              }
            },
            {
              title: "dropdown",
              state: "expanded",
              placeholder: "2 спальни, 2 кровати...",
              widthkey: 75,
              dropdown: {
                options: [
                  "спальни",
                  "кровати",
                  "ванные комнаты"
                ]
              }
            }
          ])
      .indention_wrap.form-elements-wrap_bottom
        .indention_single
          +advantages([
            {
              icon: 'insert_emoticon',
              title: 'Комфорт',
              brief: 'Шумопоглощающие стены'
            },
            {
              icon: 'location_city',
              title: 'Удобство',
              brief: 'Окно в каждой из спален'
            }
          ])
    footer.ui-kit__footer
    