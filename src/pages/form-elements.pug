include ../components/headers/ui-kit/header-ui.pug
include ../components/input/input.pug
include ../components/advantage-bar/advantage-bar.pug
include ../components/title-bar/title-bar.pug
include ../components/range-slider/range-slider.pug
include ../components/pagination/pagination.pug
include ../components/bullet-list/bullet-list.pug
include ../components/comment-bar/comment-bar.pug
include ../components/checkbox-list/checkbox-list.pug

include ../components/buttons/toggle/toggle.pug
include ../components/buttons/like/like.pug
include ../components/buttons/radio/radio.pug
include ../components/buttons/rate-stars/rate-stars.pug
include ../components/buttons/checkbox/checkbox.pug
include ../components/buttons/mean-oval/mean-oval.pug

body.ui-kit__body
  header.ui-kit__header
    +headerUI()
  main.ui-kit__main
    .form-elements__wrap.wrap_top
      .form-elements__column.column_left
        .form-elements__block.block__inpuns_common
          +inputs([
            {
              title: "text field",
              state: "default",
              placeholder: "Email"
            },
            {
              title: "text field",
              state: "hover / focus",
              placeholder: "This is pretty awesome"
            },
            {
              title: "dropdown",
              placeholder: "Сколько гостей",
              dropdown: {
                options: [
                  "взрослые",
                  "дети",
                  "младенцы"
                ]
              }
            },
            {
              title: "masked text field",
              placeholder: "ДД.ММ.ГГГГ"
            }
          ])
        .form-elements__block.block__dropdowns_date-twins
          .form-elements__element.twinline-gap_longest
            +inputs([
              {
                title: "date dropdown",
                placeholder: "ДД.ММ.ГГГГ",
                widthbypercent: 50,
                dropdown: {
                  options: [
                    ""
                  ]
                }
              },
              {
                title: "date dropdown",
                placeholder: "19.08.2019",
                widthbypercent: 50,
                dropdown: {
                  options: [
                    ""
                  ]
                }
              }
            ])
        .form-elements__block.block__dropdowns_date-semi-wide
          +inputs([
            {
              title: "filter date dropdown",
              placeholder: "19 авг - 23 авг",
              widthbypercent: 75,
              dropdown: {
                options: [
                  ""
                ]
              }
            }
          ])
        .form-elements__block.block__inputs_subscribe
          +inputs([
            {
              title: "subscription text field",
              placeholder: "Email",
              type: "email",
              widthbypercent: 75,
              subscription: true
            }
          ])
      .form-elements__column.column_center
        .form-elements__block.block__checkbox-buttons
          .form-elements__element
            +titleBar("checkbox buttons")
            .checkbox-buttons__array.additional_padding
              +checkboxButtons({
                groupname: "uik-fe__checkbox-allows", 
                checkboxes: [
                  { pressed: false, label: "Можно курить" },
                  { pressed: true,  label: "Можно с питомцами" },
                  { pressed: true,  label: "Можно пригласить гостей (до 10 человек)" }
                ]
              })
        .form-elements__block.block__radio-buttons
          .form-elements__element
            +titleBar("radio buttons")
            .radio-buttons__array.additional_padding 
              +radioButtons([
                { id: "uik-fe_male", label: "Мужчина", pressed: true },
                { id: "uik-fe_female", label: "Женщина" }
              ])
        .form-elements__block.block__toggle-buttons
          .form-elements__element
            +titleBar("toggle")
            .toggle-buttons__array.additional_padding
              +toggleButtons([
                { groupname: "uik-fe_toggles", label: "Получать спецпредложения", pressed: true },
                { groupname: "uik-fe_toggles", label: "Получать спецпредложения", pressed: false }
              ])
        .form-elements__block.block__like-buttons
          .form-elements__element
            +titleBar("like button")
            .like-buttons__array.additional_padding.twinline-gap_own
              +likeButtons([
                { groupname: "uik-fe-like", pressed: false, likecount: 2 },
                { groupname: "uik-fe-like", pressed: true, likecount: 12 }
              ])
        .form-elements__block.block__star-rate
          .form-elements__element
            +titleBar("rate button")
            .star-rate__elem.additional_padding.twinline-gap_own
              +stars([4, 5])
      .form-elements__column.column_right
        .form-elements__block.block__range-slider
          .form-elements__element
            +rangeSlider({
              title: "range slider",
              id: "uik-fe-range-slider",
              widthbypercent: 75,
            })
        .form-elements__block.block__mean-oval-buttons
          .form-elements__element
            +titleBar("buttons")
            .mean-oval-buttons.additional_padding
              .mean-oval-buttons__array
                +meanOvalButtons([
                  { groupname: "uik-fe__mob-mid", type: "contained" },
                  { groupname: "uik-fe__mob-mid", type: "contained", disabled: true },
                  { groupname: "uik-fe__mob-mid", type: "outlined" },
                  { groupname: "uik-fe__mob-mid", type: "outlined", disabled: true }
                ])
            .mean-oval-buttons__array
              +meanOvalButtons([
                { groupname: "uik-fe__mob-small", type: "text" },
                { groupname: "uik-fe__mob-small", type: "text", disabled: true },
              ])
            .mean-oval-buttons__unit
              +meanOvalButtons([
                {
                  groupname: "uik-fe__mob-huge",
                  iconname: "arrow_forward",
                  widthbypercent: "100",
                  type: "contained",
                  text: "перейти к оплате"
                }
              ])
        .form-elements__block.block__pagination
          .form-elements__element
            +titleBar("pagination")
            .pagination__elem.additional_padding
              +paginationElem()
    .form-elements__wrap.wrap_upper-middle
      .form-elements__column.column_left
        .form-elements__block.block__dropdowns_in-action
          +inputs([
            {
              title: "dropdown",
              state: "default",
              placeholder: "2 спальни, 2 кровати...",
              widthbypercent: 75,
              dropdown: {
                options: [
                  ""
                ]
              }
            },
            {
              title: "dropdown",
              state: "expanded",
              placeholder: "2 спальни, 2 кровати...",
              widthbypercent: 75,
              dropdown: {
                options: [
                  "спальни",
                  "кровати",
                  "ванные комнаты"
                ]
              }
            }
          ])
      .form-elements__column.column_center
        .form-elements__block.block__dropdowns_no-guests
          +inputs([
            {
              title: "dropdown",
              placeholder: "Сколько гостей",
              dropdown: {
                options: [
                  "взрослые",
                  "дети",
                  "младенцы"
                ]
              }
            },
          ])
      .form-elements__column.column_right
        .form-elements__block.block__dropdowns_guests
          +inputs([
            {
              title: "dropdown",
              placeholder: "3 гостя",
              dropdown: {
                options: [
                  "взрослые",
                  "дети",
                  "младенцы"
                ]
              }
            },
          ])
    .form-elements__wrap.wrap_lower-middle
      .form-elements__column.column_left
        .form-elements__block.block__checkbox-list_default
          +checkboxList({
            title: "expandable checkbox list",
            groupname: "uik-fe__checkbox-list_default",
            inserted: true,
            disabled: true,
            checkboxes: [
              { pressed: false, label: "Завтрак" },
              { pressed: true,  label: "Письменный стол" },
              { pressed: true,  label: "Стул для кормления" },
              { pressed: true,  label: "Кроватка" },
              { pressed: false, label: "Телевизор" },
              { pressed: false, label: "Шампунь" }
            ]
          })
        .form-elements__block.block__checkbox-list_ejected
          +checkboxList({
            title: "expandable checkbox list",
            groupname: "uik-fe__checkbox-list_ejected",
            inserted: false,
            checkboxes: [
              { pressed: false, label: "Завтрак" },
              { pressed: true,  label: "Письменный стол" },
              { pressed: true,  label: "Стул для кормления" },
              { pressed: true,  label: "Кроватка" },
              { pressed: false, label: "Телевизор" },
              { pressed: false, label: "Шампунь" }
            ]
          })
      .form-elements__column.column_center
        .form-elements__block.block__rich-checkbox-buttons
          .form-elements__element
            +titleBar("rich checkbox buttons")
            .checkbox-buttons__array.additional_padding
              +checkboxButtons({
                richmode: true,
                groupname: "uik-fe_rich-cbb",
                checkboxes: [
                  {
                    title: "Широкий коридор",
                    info: "Ширина коридоров в номере \nне менее 91 см."
                  },
                  {
                    title: "Помощник для инвалидов",
                    info: "На 1 этаже вас встретит специалист  и проводит до номера."
                  }
                ]
              })
      .form-elements__column.column_right
        .form-elements__block.block__bullet-list
          .form-elements__element
            +titleBar("bullet list")
            .bullet-list__elem.additional_padding
              +bulletList([
                "Нельзя с питомцами",
                "Без вечеринок и мероприятий",
                "Время прибытия — после 13:00, а выезд до 12:00"
              ])
    .form-elements__wrap.wrap_bottom
      .form-elements__column.column_left
        .form-elements__block.block__advantage-bars
          +advantageBars([
            {
              iconname: "insert_emoticon",
              title: "Комфорт",
              brief: "Шумопоглощающие стены"
            },
            {
              iconname: "location_city",
              title: "Удобство",
              brief: "Окно в каждой из спален"
            }
          ])
      .form-elements__column.column_center-right
        .form-elements__block.block__comment-bar
          +commentBar([
            {
              name: "Мурад Сарафанов",
              daysago: "5 дней назад",
              avatarname: "murad",
              text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
              likebtn: {
                groupname: "uik-fe-comment",
                pressed: true,
                likecount: 12
              }
            }
          ]) 
  footer.ui-kit__footer
