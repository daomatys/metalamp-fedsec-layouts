include ../components/header/header.pug
include ../components/input/input.pug
include ../components/advantage-bar/advantage-bar.pug
include ../components/star-rate/star-rate.pug
include ../components/title-bar/title-bar.pug
include ../components/buttons/toggle/toggle.pug
include ../components/buttons/like/like.pug
include ../components/buttons/radio/radio.pug

body.ui-kit__body
  +header()
  main.ui-kit__main
    .form-elements__wrap_top.indention_wrap
      .form-elements__column.form-elements__column_left
        .block__inpuns_common.indention_single
          +inputs([
            {
              title: "text field",
              state: "default",
              placeholder: "Email"
            },
            {
              title: "text field",
              state: "hover / focus",
              placeholder: "This is pretty awesome"
            },
            {
              title: "dropdown",
              placeholder: "Сколько гостей",
              dropdown: {
                options: [
                  "взрослые",
                  "дети",
                  "младенцы"
                ]
              }
            },
            {
              title: "masked text field",
              placeholder: "ДД.ММ.ГГГГ"
            }
          ])
        .block__dropdowns_date-twins.indention_double.twinline-gap_longest
          +inputs([
            {
              title: "date dropdown",
              placeholder: "ДД.ММ.ГГГГ",
              keywidth: 50,
              dropdown: {
                options: [
                  ""
                ]
              }
            },
            {
              title: "date dropdown",
              placeholder: "19.08.2019",
              keywidth: 50,
              dropdown: {
                options: [
                  ""
                ]
              }
            }
          ])
        .block__dropdowns_date-semi-wide.indention_double
          +inputs([
            {
              title: "filter date dropdown",
              placeholder: "19 авг - 23 авг",
              keywidth: 75,
              dropdown: {
                options: [
                  ""
                ]
              }
            }
          ])
        .block__inputs_subscribe.indention_double
          +inputs([
            {
              title: "subscription text field",
              placeholder: "Email",
              type: "email",
              subscription: true
            }
          ])
      .form-elements__column.form-elements__column_center
        .block__checkbox-buttons.indention_single
          +titleBar("checkbox buttons")
        .block__radio-buttons.indention_double
          +titleBar("radio buttons")
          .radio-buttons__array.additional-padding 
            +radioButtons([
              { id: "male", pressed: true, label: "Мужчина" },
              { id: "female", pressed: false, label: "Женщина" }
            ])
        .block__toggle-buttons.indention_double
          +titleBar("toggle")
          .toggle-buttons__array.additional-padding
            +toggleButtons([
              { pressed: true, label: "Получать спецпредложения" },
              { pressed: false, label: "Получать спецпредложения" }
            ])
        .block__like-buttons.indention_double
          +titleBar("like button")
          .like-buttons__array.additional-padding.twinline-gap_own
            +likeButtons([
              { pressed: false, likecount: 2 },
              { pressed: true, likecount: 12 }
            ])
        .block__star-rate.indention_double
          +titleBar("rate button")
          .star-rate__elem.additional-padding.twinline-gap_own
            +stars([4, 5])
      .form-elements__column.form-elements__column_right
    .form-elements__wrap_upper-middle.indention_wrap
      .form-elements__column.form-elements__column_left
        .block__dropdowns_in-action.indention_single
          +inputs([
            {
              title: "dropdown",
              state: "default",
              placeholder: "2 спальни, 2 кровати...",
              keywidth: 75,
              dropdown: {
                options: [
                  ""
                ]
              }
            },
            {
              title: "dropdown",
              state: "expanded",
              placeholder: "2 спальни, 2 кровати...",
              keywidth: 75,
              dropdown: {
                options: [
                  "спальни",
                  "кровати",
                  "ванные комнаты"
                ]
              }
            }
          ])
      .form-elements__column.form-elements__column_center
      .form-elements__column.form-elements__column_right
    .form-elements__wrap_lower-middle.indention_wrap
    .form-elements__wrap_bottom.indention_wrap
      .form-elements__column.form-elements__column_left
        .block__advantage-bars.indention_single
          +advantageBars([
            {
              icon: "insert_emoticon",
              title: "Комфорт",
              brief: "Шумопоглощающие стены"
            },
            {
              icon: "location_city",
              title: "Удобство",
              brief: "Окно в каждой из спален"
            }
          ])
      .form-elements__column.form-elements__column_center
      .form-elements__column.form-elements__column_right
  footer.ui-kit__footer
